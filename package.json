{
  "name": "clipaste",
  "version": "1.0.0",
  "description": "Clipboard manager application",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist:linux": "electron-builder --linux"
  },
  "repository": "https://github.com/ahmetkorkmaz3/clipaste",
  "keywords": [
    "clipboard",
    "copy",
    "paste",
    "keynote"
  ],
  "author": "Ahmet Korkmaz <muratahmetkorkmaz@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "jquery": "^3.6.3",
    "lowdb": "^5.0.5",
    "shortid": "^2.2.16",
    "sweetalert2": "^11.6.16"
  },
  "build": {
    "appId": "com.arkkod.clipaste",
    "linux": {
      "target": [
        "snap",
        "deb"
      ],
      "files": ["**/*", "build/icon.*"],
      "icon": "./build/",
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "./images/logo.png"
    }
  }
}
